{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "node",
    // "newLine": "lf",
    "noImplicitAny": false,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    // "strictNullChecks": true,
    "target": "es2020",

    "lib": ["es2020", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "bin", "config"]
}
