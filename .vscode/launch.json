  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Grok",
      "request": "launch",
      "type": "node",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/grok-cli",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "preLaunchTask": "npm: build",
      "args": [
        "../math-json/src/public.ts",
        // "../mathlive/dist/public",
        // "test/class-test.d.ts",
        "--outDir",
        "build",
        "--verbose",
        "--ignore-errors"
      ]
    }
  ]
}
