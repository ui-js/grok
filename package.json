{
  "name": "@ui-js/grok",
  "version": "1.4.0",
  "description": "A tool to build beautiful documentation from TypeScript declaration files",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "TypeScript",
    "documentation",
    "tool"
  ],
  "license": "MIT",
  "main": "bin/grok.js",
  "module": "bin/grok.js",
  "bin": {
    "grok": "bin/grok-cli.js"
  },
  "files": [
    "bin/grok-cli.js"
  ],
  "devDependencies": {
    "@cortex-js/prettier-config": "^1.1.0",
    "@types/node": "^17.0.18",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.3.4",
    "please-upgrade-node": "^3.2.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chalk": "^4.0.0",
    "ci-info": "^3.3.0",
    "cosmiconfig": "^7.0.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "highlight.js": "^11.4.0",
    "markdown-it": "^12.3.2",
    "markdown-it-deflist": "^2.1.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "resolve-from": "^5.0.0",
    "typedoc": "0.22.11",
    "typescript": "^4.5.5",
    "update-notifier": "^5.1.0",
    "yaml": "^1.10.2",
    "yargs": "^17.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ui-js/grok.git"
  },
  "scripts": {
    "build": "bash ./scripts/build.sh",
    "clean": "bash ./scripts/clean.sh",
    "coverage": "bash ./scripts/test.sh coverage",
    "deploy": "",
    "dist": "bash ./scripts/build.sh production",
    "grok": "node ./bin/grok",
    "lint": "eslint --ignore-path ./.prettierignore --fix \"src/*.{ts,js}\"",
    "prettier": "prettier --ignore-path ./.prettierignore --write \"**/*.{ts,js,css,md,yml,json}\" \"!vendor/**\"",
    "snapshot": "bash ./scripts/test.sh snapshot",
    "test": "bash ./scripts/test.sh",
    "watch": "rollup --config ./config/rollup.config.js --watch"
  },
  "prettier": "@cortex-js/prettier-config",
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
