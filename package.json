{
  "name": "@ui-js/grok",
  "version": "1.2.0",
  "description": "A tool to build beautiful documentation from TypeScript declaration files",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "TypeScript",
    "documentation",
    "tool"
  ],
  "license": "MIT",
  "main": "bin/grok.js",
  "module": "bin/grok.js",
  "bin": {
    "grok": "bin/grok-cli"
  },
  "files": [
    "bin/grok.js",
    "bin/grok-cli"
  ],
  "devDependencies": {
    "@cortex-js/prettier-config": "^1.1.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "please-upgrade-node": "^3.2.0",
    "rollup": "^2.38.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chalk": "^4.1.0",
    "ci-info": "^2.0.0",
    "cosmiconfig": "^7.0.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "highlight.js": "^10.5.0",
    "markdown-it": "^12.0.4",
    "markdown-it-deflist": "^2.1.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "resolve-from": "^5.0.0",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3",
    "update-notifier": "^5.0.1",
    "yaml": "^1.10.0",
    "yargs": "^16.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ui-js/grok.git"
  },
  "scripts": {
    "build": "bash ./scripts/build.sh",
    "clean": "bash ./scripts/clean.sh",
    "coverage": "bash ./scripts/test.sh coverage",
    "deploy": "",
    "dist": "bash ./scripts/build.sh production",
    "grok": "node ./bin/grok",
    "lint": "eslint --ignore-path ./.prettierignore --fix \"src/*.{ts,js}\"",
    "prettier": "prettier --ignore-path ./.prettierignore --write \"**/*.{ts,js,css,md,yml,json}\" \"!vendor/**\"",
    "snapshot": "bash ./scripts/test.sh snapshot",
    "test": "bash ./scripts/test.sh",
    "watch": "rollup --config ./config/rollup.config.js --watch"
  },
  "prettier": "@cortex-js/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/bin"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage"
  }
}
